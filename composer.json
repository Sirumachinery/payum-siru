{
    "name": "sirumobile/payum-siru",
    "type": "library",
    "description": "Payum extension for Siru Mobile payment gateway",
    "keywords": ["payment", "payum", "siru", "mobile payment"],
    "homepage": "https://github.com/Sirumachinery/payum-siru",
    "license": "MIT",
    "support": {
        "docs": "https://sirumobile.com/developers"
    },
    "require": {
        "php": ">=8.0",
        "ext-json": "*",
        "payum/core": "^1.5",
        "sirumobile/siru-php-sdk": "^1.0"
    },
    "require-dev": {
        "php-http/guzzle6-adapter": "^1.0",
        "phpstan/phpstan": "^1.8",
        "phpstan/phpstan-phpunit": "^1.1",
        "phpunit/phpunit": "^9.5"
    },
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-4": { "Siru\\PayumSiru\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": { "Siru\\PayumSiru\\Tests\\": "tests/" }
    }
}
